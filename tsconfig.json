{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ES2020",
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    // aliases
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "./*"
      ],
      "Components/*": [
        "src/Components/*"
      ],
      "Interfaces/": [
        "src/Data/Interfaces/",
        "src/Data/Interfaces/*"
      ],
      "Utilities/*": [
        "src/Utilities/*"
      ],
      "Objects/*": [
        "src/Data/Objects/*"
      ],
      "Styles/*": [
        "src/Styles/*"
      ],
      "Providers/*": [
        "src/Providers/*"
      ],
      "Shared/*": [
        "Shared/*"
      ],
      "Electron/*": [
        "electron/*"
      ],
      "Hooks/*": [
        "src/Hooks/*"
      ],
      "Pages/*": [
        "src/Pages/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
    }
  },
  "include": [
    "src",
    "electron",
    "Shared"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}